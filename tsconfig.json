{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "app",
    "target": "es5",
    "sourceMap": true,
    "module": "system",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules",
    "typings/main",
    "typings/main.d.ts",
    "docs",
    "libs"
  ]
}
